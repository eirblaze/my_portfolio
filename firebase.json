{
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "/check_recaptcha",
        "function": "check_recaptcha"
      },
      {
        "source": "**",
        "function": "mainPage"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
